public class Dosen extends Identitas {

    public Dosen(String nidn, String nama) {
        super(nidn, nama);
    }

    @Override
    public String getJenis() {
        return "Dosen";
    }

    // DOSEN input nilai
    public Nilai inputNilai(Mahasiswa mhs, MataKuliah mk,
                            double uts, double uas, double tugas) {

        if (!mk.getDosenPengampu().getId().equals(this.id)) {
            throw new RuntimeException("Bukan dosen pengampu!");
        }

        return new Nilai(mhs, mk, uts, uas, tugas);
    }
}
